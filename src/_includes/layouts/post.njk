---
layout: layouts/base.njk
---

<div class="flex flex-col lg:flex-row space-x-6">
  <div class="post-content">
    <h1>{{ title }}</h1>
    <div class="post-metadata mt-4 mb-8 space-y-2">
      <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
      <div>
        {%- for tag in tags | filterTagList %}
          {%- set tagUrl %}/tags/{{ tag }}/{% endset %}
          <div class="badge badge-secondary badge-lg mb-1">
            <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
            {%- if not loop.last %}{% endif %}
          </div>
        {%- endfor %}
      </div>
    </div>
    <main>
      {{ content | safe }}
    </main>
    {%- if collections.posts %}
      {%- set previousPost = collections.posts | getPreviousCollectionItem %}
      {%- set nextPost = collections.posts | getNextCollectionItem %}
      {%- if nextPost or previousPost %}
        <ul class="links-nextprev">
          {%- if previousPost %}
            <li>Previous:
              <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
            </li>
          {% endif %}
          {%- if nextPost %}
            <li>Next:
              <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
            </li>
          {% endif %}
        </ul>
      {%- endif %}
    {%- endif %}
  </div>
  <div class="min-w-[350px] w-[350px]">
    <div class="sticky top-20">
      {% set postslistTitle = "最近更新" %}
      {% set postslist = collections.recentPosts %}
      {% include "../components/side-postslist.njk" %}
    </div>
  </div>
</div>