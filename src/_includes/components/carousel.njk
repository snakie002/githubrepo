{% css %}
.embla {
  overflow: hidden;
}
.embla__container {
  display: flex;
}
.embla__slide {
  flex: 0 0 100%;
  min-width: 0;
}
{% endcss %}

<div class="embla mb-4">
  <div class="embla__container">
    {% for featuredPost in collections.featuredPosts %}
        {% if featuredPost.data.coverImage %}
            <div class="embla__slide">
                <a href="{{ featuredPost.url | url }}">{% coverimage featuredPost, featuredPost.data.title %}</a>
            </div>
        {% endif %}
    {% endfor %}
  </div>
</div>

